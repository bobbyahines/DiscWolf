{% extends '/Layout.twig' %}

{% block title %} DiscWolf {% endblock %}

{% block body %}
    <div class="content">

        <table class="table">
            <thead>
            <tr>
                <th>{{ data.courseName }}: {{ data.holesCount }} Holes @ ${{ data.skinsAmount }}ea</th>
            </tr>
            </thead>
        </table>

        <form action="/terms" method="POST" id="player_names" name="player_names">
            <table class="table">
                <thead></thead>
                <tbody>
                {% for i in 1..data.playersCount %}
                    <tr>
                        <td>
                            <label class="label">Player {{ i }}</label>
                            <input class="input" type="text" placeholder="Player Name" name="player{{ i }}" id="player{{ i }}" value="Player {{ i }}" form="player_names">
                        </td>
                        <td>
                            <label class="label">Nassau?</label>
                            <select name="player{{ i }}nassau" id="player{{ i }}nassau" form="player_names">
                                <option value="0.00">&#36;0</option>
                                <option value="1.00" selected>&#36;1</option>
                                <option value="2.00">&#36;2</option>
                                <option value="5.00">&#36;5</option>
                            </select>
                        </td>
                    </tr>
                {% endfor %}
                <tr>
                    <td colspan="2">
                        <input class="button is-link" type="submit" form="player_names" value="Ready?">
                        <a href="/"><button type="button">Cancel</button></a>
                    </td>
                </tr>
                </tbody>
            </table>
        </form>
    </div>
{% endblock %}

{% block scripts %}{% endblock %}
