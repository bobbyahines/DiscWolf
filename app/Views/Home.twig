{% extends '/Layout.twig' %}

{% block title %} DiscWolf {% endblock %}

{% block body %}
    <section class="section">
        <form action="/registerPlayers" method="post" id="game_start">
            <div class="field columns">
                <div class="column is-narrow-desktop">
                    <label class="label is-large">Players</label>
                </div>
                <div class="control column">
                    <div class="select">
                        <select name="player_count" id="player_count" form="game_start">
                            {% for i in 4..9 %}
                                <option>{{ i }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
            </div>
            <div class="field columns">
                <div class="column is-narrow-desktop is-narrow-mobile">
                    <label class="label is-large">Course</label>
                </div>
                <div class="control column">
                    <div class="select">
                        <select name="course_name" id="course_name" form="game_start">
                            <option value="Baker">Baker</option>
                            <option value="Flanacher">Flanacher</option>
                            <option value="Highland - Gold">Highland - Gold</option>
                            <option value="Highland - Purple">Highland - Purple</option>
                            <option value="Scotlandville">Scotlandville</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="field columns">
                <div class="column is-narrow-desktop is-narrow-mobile">
                    <label class="label is-large">Skins</label>
                </div>
                <div class="control column">
                    <div class="select">
                        <select name="skins_value" id="skins_value" form="game_start">
                            <option value="0.25" selected>25&#162;</option>
                            <option value="0.50">50&#162;</option>
                            <option value="0.75">75&#162;</option>
                            <option value="1.00">&#36;1</option>
                            <option value="2.00">&#36;2</option>
                            <option value="5.00">&#36;5</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="field" colspan="2">
                <div class="control">
                    <label class="checkbox">
                        <input type="checkbox" id="player_terms" name="player_terms" form="game_start">
                        I agree to the <a href="#">terms and conditions</a>
                    </label>
                </div>
            </div>
            <div class="field" colspan="2">
                <div class="control">
                    <br>
                    <input class="button is-success" type="submit" form="game_start" value="Setup Players">
                </div>
            </div>
        </form>
    </section>
{% endblock %}

{% block scripts %}{% endblock %}
