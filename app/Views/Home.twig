{% extends '/Layout.twig' %}

{% block title %} DiscWolf {% endblock %}

{% block body %}
    <section class="section">
        <form action="/registerPlayers" method="post" id="game_start">
            <table class="table is-fullwidth">
                <tbody>
                <tr>
                    <td>
                        <div class="field">
                            <label class="label is-large">Players</label>
                            <div class="control">
                                <div class="select">
                                    <select name="player_count" id="player_count" name="player_count" form="game_start">
                                        {% for i in 3..9 %}
                                            <option>{{ i }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <br><br>
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="field">
                            <label class="label is-large">Skins</label>
                            <div class="control">
                                <div class="select">
                                    <select name="player_skins" id="player_skins" form="game_start">
                                        <option value="0.01">1&#162;</option>
                                        <option value="0.05">5&#162;</option>
                                        <option value="0.10">10&#162;</option>
                                        <option value="0.25" selected>25&#162;</option>
                                        <option value="0.50">50&#162;</option>
                                        <option value="0.75">75&#162;</option>
                                        <option value="1.00">&#36;1</option>
                                        <option value="2.00">&#36;2</option>
                                        <option value="5.00">&#36;5</option>
                                    </select>
                                </div>
                                <br><br>
                            </div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <div class="field">
                            <div class="control">
                                <label class="checkbox">
                                    <input type="checkbox" id="player_terms" name="player_terms" form="game_start">
                                    I agree to the <a href="#">terms and conditions</a>
                                </label>
                            </div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <div class="field">
                            <div class="control">
                                <br>
                                <input class="button is-link" type="submit" form="game_start" value="Select Players">
{#                                <button class="button is-link" form="registerPlayer">Select Players</button>#}
                            </div>
                        </div>
                    </td>
                </tr>
                </tbody>
            </table>
        </form>
    </section>
{% endblock %}

{% block scripts %}{% endblock %}
